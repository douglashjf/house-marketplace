<div class="container">
  <h1>All Houses</h1>

  <div class="container mb-3">
    <%= render 'pages/search' %>
  </div>

  <hr>
  <%= link_to 'Looking to sell? Create new listing', new_house_path, class: "btn btn-success"%>
  <hr>

  <div data-controller="map"
    id='map'
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    data-map-markers-value="<%= @markers.to_json %>"
    style="width: 100%; height: 600px;"></div>

  <%= render 'listing' %>

</div>
