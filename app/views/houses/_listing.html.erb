<div class="row">
  <% @houses.each do |house| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <!-- Can replace the following image tag with your actual image using image_tag -->
        <% if house.photo.attached? %>
          <%= image_tag(cl_image_path house.photo.key, width: 400, height: 300, crop: :fill) %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to house.address, house_path(house) %></h5>
          <p class="card-text">Price: $<%= house.price %></p>
          <!-- You can customize the card content and add more information here -->
          <%= link_to "Click for more info", house_path(house), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
